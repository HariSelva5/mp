


<AddNewForm>:
    text_input: input
    TextInput:
        id: input
        size: 260,350
        pos:10,50
    Button:
        size: 130,40
        pos: 10, 450
        text: 'Submit'
        on_release: root.submit_input()





<HomeScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        MyRecycleView:
        Button:
            text:'add new'
            size_hint:0.3,0.05
            pos_hint:{"x":0.01,"y":0.01}
            on_release:root.go()
            
<MyRecycleView>:
    viewclass: 'Button'
    RecycleBoxLayout:
        color: 1,1,1,1
        #width:self.minimum_width
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<AddScreen>:
    FloatLayout:
        Button:
            text:'back'
            size_hint:0.9,0.05
            pos_hint:{"x":0.0,"y":0.01}
            on_release:root.back()