<CalculatorGridLayout>:
    id: calculator
    display: data
    rows: 6
    padding: 5
    spacing: 5
    BoxLayout:
        TextInput:
            id: data
            font_size: 24
            multiline: False
    BoxLayout:
        spacing: 10
        Button:
            text: "7"
            on_press: data.text += self.text
        Button:
            text: "8"
            on_press: data.text += self.text
        Button:
            text: "9"
            on_press: data.text += self.text
        Button:
            text: "/"
            on_press: data.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: "4"
            on_press: data.text += self.text
        Button:
            text: "5"
            on_press: data.text += self.text
        Button:
            text: "6"
            on_press: data.text += self.text
        Button:
            text: "*"
            on_press: data.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: data.text += self.text
        Button:
            text: "2"
            on_press: data.text += self.text
        Button:
            text: "3"
            on_press: data.text += self.text
        Button:
            text: "-"
            on_press: data.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: "AC"
            on_press: data.text = ""
        Button:
            text: "0"
            on_press: data.text += self.text
        Button:
            text: "="
            on_press: calculator.calculate(data.text)
        Button:
            text: "+"
            on_press: data.text += self.text