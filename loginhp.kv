# there are three screens 
windowManager: 
	loginWindow: 
	signupWindow: 
	logDataWindow: 
    homePageWindow:

# GUI for the login window 
<loginWindow>: 
    mobile : mobile
	email : email 
	pwd : pwd 
	FloatLayout: 
		size: root.width, root.height  
        orientation:'vertical'   
        Image:
            source:"C:/Users/HARISELVA/share/kivy-examples/tutorials/notes/mp/logo.png"
            size_hint : 0.45, 0.3
			pos_hint : {"x":0.25, "top":0.9} 
            allow_stretch: True
        Label: 
			text : "Mobile : "
            font_size: 15
            font_name: "verdana"
            bold: True
            italic: True
            color: [0,0,0,0.90]
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.17, "top":0.47} 
		TextInput: 
			id : mobile
            font_size: 9
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
			multiline :False
			size_hint : 0.2, 0.05
			pos_hint : {"x" : 0.45, "top" : 0.45} 
        Label: 
			text : "Email: "
            font_size: 15
            font_name: "verdana"
            bold: True
            italic: True
            color: [0,0,0,0.90]
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.17, "top":0.55} 
		TextInput: 
			id : email 
            font_size: 9
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
			multiline :False
			size_hint : 0.2, 0.05
			pos_hint : {"x" : 0.45, "top" : 0.53} 
		Label: 
			text : "Password: "
            font_size: 15
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.17, "top" : 0.39} 
		TextInput: 
			id : pwd 
            font_size: 9
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
			multiline :False
			size_hint : 0.2, 0.05
			pos_hint : {"x" : 0.45, "top" : 0.36} 
        Button: 
			text: "Forget Password?"
            color: [0,0,0,0.90]
            font_size: 10
            font_name: "verdana"
            bold: True
            italic: True
            background_color: rgba(0,0,0,0)		
            size_hint : 0.05, 0.05
			pos_hint : {"x" : 0.46, "top" : 0.2} 	
		Button:
            text: "Register"
            color: [0,0,0,0.90]
            font_size: 15
            font_name: "verdana"
            bold: True
            italic: True
            background_color: rgba(0,0,0,0)
            size_hint : 0.05, 0.05
            pos_hint : {"x" : 0.44, "top" : 0.25}     
            on_release: 
				app.root.current = 'signup'
				root.manager.transition.direction = "left" 
			
		Button: 
			text : "Login"
            color: [0,0,0,0.90]
            font_size: 15
            font_name: "verdana"
            bold: True
            italic: True
            background_color: rgba(0,0,0,0)
			size_hint : 0.05, 0.05
			pos_hint : {"x" : 0.43, "top" : 0.3} 
			on_release: 
				root.validate() 
				root.manager.transition.direction = "right"

# GUI for the signup window 
<signupWindow>: 
