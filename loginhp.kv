# GUI to show validation result 
<logDataWindow>: 
	info : info 
	FloatLayout: 
		Label: 
			id : info 
            font_size: 15
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
			size_hint : 0.8, 0.2
			pos_hint : {"x" : 0.15, "top" : 0.8} 
			text : "SUCCESSFULLY LOGGED IN"
		Button: 
			text : "Login"
            font_size: 15
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
            background_color:rgba(0,0,0,0)
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.55} 
			on_release: 
				app.root.current = 'login'
				root.manager.transition.direction = "down"
		Button: 
			text : "Register"
            font_size: 15
            font_name: "verdana"
            color: [0,0,0,0.90]
            bold: True
            italic: True
            background_color:rgba(0,0,0,0)
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.4} 
			on_release: 
				app.root.current = 'signup'
				root.manager.transition.direction = "down"



